#version 150

uniform vec3 globalShift;

in vec3 pos;
in vec3 color;
in float sides;

out vec3 vColor; // Output to geometry (or fragment) shader
out float vSides;

out int instanceID;

void main() {
    gl_Position = vec4(pos+globalShift, 1.0);
    vColor = color;
	vSides = sides;
	instanceID = gl_InstanceID;
}